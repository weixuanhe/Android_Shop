<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_ly"
        android:layout_width="fill_parent"
        android:layout_height="47.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@color/white"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip" >

        <TextView
            android:id="@+id/comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/detail_comment_icon"
            android:drawablePadding="10.0dip"
            android:text="@string/detail_comment_text"
            android:textColor="@color/official_text0"
            android:textSize="15.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_ly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="13.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/app_stroke_color2" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/default_avatar_small" />

        <TextView
            android:id="@+id/from_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/avatar"
            android:layout_toRightOf="@+id/avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/official_text0"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/from_name"
            android:layout_toRightOf="@+id/from_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/official_text4"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/to_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/center"
            android:layout_toRightOf="@+id/center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/official_text0"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/center"
            android:layout_marginRight="15.0dip"
            android:layout_toRightOf="@+id/to_name"
            android:singleLine="true"
            android:text=":"
            android:textColor="@color/official_text0"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginLeft="15.0dip"
            android:singleLine="true"
            android:textColor="@color/official_text4"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from_name"
            android:layout_marginTop="3.0dip"
            android:layout_toRightOf="@+id/avatar"
            android:textColor="@color/official_text2"
            android:textSize="14.0sp" 
            android:text="很好不错"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_ly"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/app_stroke_color2" />

        <TextView
            android:id="@+id/comment_title_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="5.0dip"
            android:drawableRight="@drawable/goto_icon"
            android:text="@string/more_comments"
            android:textColor="@color/official_text0"
            android:textSize="15.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_ly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/app_stroke_color2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="58.0dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/detail_edit_text_bg"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/input"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="12.0dip"
                    android:paddingRight="12.0dip"
                    android:singleLine="true"
                    android:textColor="@color/official_text4"
                    android:textSize="14.0sp" />

                <ImageView
                    android:layout_width="34.0dip"
                    android:layout_height="34.0dip"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="2.0dip"
                    android:padding="5.0dip"
                    android:src="@drawable/emoji_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/post_btn"
                android:layout_width="75.0dip"
                android:layout_height="32.0dip"
                android:layout_gravity="center"
                android:background="@drawable/detail_comment_post_bg"
                android:gravity="center"
                android:text="@string/detail_comment_post_text"
                android:textColor="@color/official_text0"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>