<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cat_layout_title"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/base_title_bar_height"
    android:background="#fff8f8f8" >

    <View
        android:id="@+id/cover"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#80ffffff"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cat_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15.0dip"
        android:paddingRight="25.0dip"
        android:scaleType="center"
        android:src="@drawable/black_back_btn" />

    <TextView
        android:id="@+id/cat_middle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxWidth="180.0dip"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="20.0sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingRight="10.0dip" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/cat_right_btn1"
                android:layout_width="25.0dip"
                android:layout_height="24.0dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="4.0dip"
                android:padding="2.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/black_cart_btn" />

            <ImageView
                android:id="@+id/cat_unread_icon"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:layout_alignRight="@+id/cat_right_btn1"
                android:layout_alignTop="@+id/cat_right_btn1"
                android:layout_marginRight="-4.0dip"
                android:layout_marginTop="-2.0dip"
                android:src="@drawable/unread_icon_red" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/cat_right_btn2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/shop_cate" />
    </LinearLayout>

</RelativeLayout>