<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:background="@color/app_background_color" >

    <TextView
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:text="@string/search"
        android:textColor="@color/search_button_bg"
        android:textSize="15.0sp" />

    <RelativeLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="33.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15.0dip"
        android:layout_toLeftOf="@+id/search_button"
        android:layout_toRightOf="@+id/left_btn"
        android:background="@drawable/index_search_bg"
        android:paddingBottom="1.0px"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip" >

        <View
            android:id="@+id/searchbar_clear_text_button"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/searchbar_clear_text_button_bg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/search_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawablePadding="5.0dip"
            android:drawableRight="@drawable/search_switch_icon"
            android:gravity="center_vertical"
            android:text="@string/search_goods_text_"
            android:textColor="@color/search_switch_btn_text_color"
            android:textSize="15.0sp" />

        <EditText
            android:id="@+id/searchbar_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/searchbar_clear_text_button"
            android:layout_toRightOf="@+id/search_switch_btn"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:paddingLeft="9.0dip"
            android:paddingRight="3.0dip"
            android:singleLine="true"
            android:textColor="@color/red_color"
            android:textColorHint="@color/official_text4"
            android:textCursorDrawable="@drawable/search_text_cursor"
            android:textSize="15.0sp" />
    </RelativeLayout>

</RelativeLayout>