            android:layout_height="wrap_content"
            android:layout_below="@+id/title_ly"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@+id/shop_owner_avatar"
            android:textColor="@color/official_text4"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/goto_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="10.0dip"
            android:drawableRight="@drawable/goto_icon"
            android:text="@string/goto_shop"
            android:textColor="@color/official_text2"
            android:textSize="15.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/shop_middle_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/yd_detail_shop_score_ly"
        android:layout_width="fill_parent"
        android:layout_height="31.0dip"
        android:visibility="gone" />

</LinearLayout>